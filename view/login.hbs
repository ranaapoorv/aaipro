<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
						initial-scale=1.0">
    <title>Airports Authority of India</title>
    <link rel="stylesheet" href="./styles/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <header>
        <h1 class="heading">Contract Management System</h1>
        <h3 class="title">Login & Registration</h3>
    </header>
    <div class="container">

        <div class="container">
            <img src="https://pbs.twimg.com/profile_images/1598196376667840512/YkXx09NT_400x400.jpg" alt="Corner Image"
                class="corner-image">


            <div class="slider"></div>
            <div class="btn">
                <button class="login">Login</button>
                <button class="signup">Signup</button>
            </div>

            <div class="form-section">
                <form action="/login" method="POST">

                    <!-- login form -->
                    <div class="login-box">
                        <div class="email-div">
                            <input type="email" name="email" class="email ele" id="username" placeholder="USERNAME">
                        </div>
                        <div class="password-div">
                            <input type="password" name="password" class="password ele" id="password"
                                placeholder="PASSWORD">
                        </div>
                        <button type="submit" class="clkbtn">Login</button>
                    </div>
                </form>

                <!-- signup form -->
                <form  class="signup-form">
                    <div class="signup-box">
                        <div id="message"></div>
                        <div class="name-input">
                            <input type="text" class="name ele" placeholder="Enter your name" name="name" id="name">
                        </div>
                        <div class="email-input">
                            <input type="text" class="email ele"  placeholder="username@email.com"  name="email" id="email">
                        </div>
                        <div class="password-input">
                            <input type="password" class="password ele"  placeholder="Password" name="password" id="spassword">
                        </div>
                        <div class="password-confirm-input">
                            <div class="password-input">
                                <input type="password" class="password ele" placeholder="Confirm password" name="confirm-password"
                                    id="confirm-password">
                            </div>

                            <div class="eye-icon">
                                <i class="fas fa-eye" id="confirm-password-eye"
                                    onclick="togglePassword('confirm-password')"></i>
                            </div>
                        </div>
                        <button type="submit" class="clkbtn">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="./js/script.js"></script>

    <script>
        function togglePassword(inputId) {
            var passwordInput = document.getElementById(inputId);
            var passwordEye = document.getElementById(inputId + "-eye");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordEye.classList.remove("fa-eye");
                passwordEye.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                passwordEye.classList.remove("fa-eye-slash");
                passwordEye.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>
</body>
</html>
